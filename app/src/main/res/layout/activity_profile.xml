<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="match_parent">


  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="13dp"
      android:background="@drawable/bar"
      android:elevation="2dp"
      app:itemIconSize="30dp"
      app:itemRippleColor="@android:color/transparent"
      app:labelVisibilityMode="unlabeled"
      app:menu="@menu/bar" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="640dp">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="318dp"
        android:layout_height="244dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/a" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_below="@id/item_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="83dp"
        android:hint="Item name"
        android:gravity="center|center_horizontal"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/item_desc"
        android:layout_width="317dp"
        android:layout_height="81dp"
        android:layout_below="@+id/item_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="56dp"
        android:hint="Description"
        android:gravity="center|fill_horizontal"
        android:text=""
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="128dp"
        android:layout_height="47dp"
        android:hint="Price"
        android:layout_below="@+id/item_img"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="29dp"
        android:layout_toEndOf="@+id/item_name"
        android:gravity="center"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/item_cart"
        android:layout_width="247dp"
        android:layout_height="64dp"
        android:layout_below="@+id/item_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="270dp"
        android:text="Buy Now" />

    <ImageView
        android:id="@+id/item_rating"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="294dp"
        android:src="@drawable/r4_5" />

    <TextView
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_rating"
        android:layout_alignBottom="@+id/item_rating"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/train_one"
        android:gravity="center"
        android:text="Rating"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />
  </RelativeLayout>

</RelativeLayout>